{
    "manifest_version": 3,
    "name": "ForgeCV: AI powered resume generator",
    "version": "1.0.0",
    "description": "Generate ATS-optimized resumes from any job description.",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage",
        "sidePanel",
        "tabs"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://api.groq.com/*",
        "https://integrate.api.nvidia.com/*"
    ],
    "action": {
        "default_title": "ForgeCV",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}