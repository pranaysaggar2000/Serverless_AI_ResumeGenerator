{
    "manifest_version": 3,
    "name": "ForgeCV: AI powered resume generator",
    "version": "1.0.1",
    "description": "AI-powered resume tailoring. Automatically reads job descriptions, optimizes your resume for ATS, and generates tailored PDFs.",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage",
        "sidePanel",
        "tabs"
    ],
    "optional_host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://api.groq.com/*",
        "https://openrouter.ai/*",
        "https://www.linkedin.com/*",
        "https://serverless-ai-resume-generator-api.vercel.app/*",
        "https://*.supabase.co/*"
    ],
    "action": {
        "default_title": "ForgeCV",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}